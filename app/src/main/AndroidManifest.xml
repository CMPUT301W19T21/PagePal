<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ca.team21.pagepal">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity android:name=".views.SearchActivity"
            android:label="@string/page_pal">
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>
            <meta-data android:name="android.app.searchable"
                android:resource="@xml/searchable"/>
        </activity>
        <activity android:name=".views.EditBookActivity"></activity>
        <activity android:name=".views.BookDetailsActivity"></activity>
        <activity android:name=".views.EditUserActivity" />
        <activity
            android:name=".views.LoginActivity"
            android:label="@string/page_pal">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".views.SignUpActivity"
            android:label="@string/title_activity_sign_up"
            android:parentActivityName=".views.LoginActivity" />
        <activity
            android:name=".views.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
            </intent-filter>
            <meta-data
                android:name="android.app.default_searchable"
                android:value=".views.SearchActivity" />
        </activity>
    </application>

</manifest>