<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/HistoryLayout"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="100">

    <ImageView
        android:id="@+id/BookHisPhoto"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_weight="66.6"
        android:gravity="center"
        android:scaleType="fitXY"

        app:srcCompat="@drawable/ic_book_24px" />



        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight = "33.3">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:id= "@+id/BookHisTitle"
                android:text = "Title"
                />

            <TextView
                android:text = "author"
                android:layout_width = "wrap_content"
                android:layout_height = "30dp"
                android:layout_below="@+id/BookHisAuthor"
                android:id = "@+id/BookHisAuthor"
                />

            <TextView
                android:text = "genre"
                android:layout_height = "30dp"
                android:layout_width = "wrap_content"
                android:id = "@+id/BookHisGenre" />

        </LinearLayout>

    <Button
        android:id="@+id/delete_button"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="20dp"
        android:drawableStart="@drawable/ic_delete_24px"
        android:visibility="visible" />

</LinearLayout>