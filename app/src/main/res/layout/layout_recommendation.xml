<?xml version="1.0" encoding="utf-8"?>
    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app = "http://schemas.android.com/apk/res-auto"

    android:layout_width="120dp"
        android:layout_height="150dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="2dp"
        android:layout_marginBottom="2dp"
        android:layout_marginTop="5dp"
        app:cardBackgroundColor="#008577"
        app:cardCornerRadius="4dp"
        app:cardElevation="1dp"

        app:cardMaxElevation="2dp"
        app:layout_constraintStart_toStartOf="parent">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/relativeLayout">

            <View
                android:id="@+id/view"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent" />

            <ImageView
                android:id="@+id/ReccIcon"
                android:layout_width="80dp"
                android:layout_height="96dp"
                android:layout_marginTop="8dp"
                android:scaleType="fitXY"
                android:visibility="invisible"
                app:layout_constraintBottom_toTopOf="@+id/ReccAuthor"
                app:layout_constraintEnd_toEndOf="@+id/ReccPhoto"
                app:layout_constraintStart_toStartOf="@+id/ReccPhoto"
                app:layout_constraintTop_toBottomOf="@+id/ReccTitle"
                app:layout_constraintVertical_bias="1.0"
                app:srcCompat="@drawable/ic_book_24px" />


            <ImageView
                android:id="@+id/ReccPhoto"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:scaleType="fitXY"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/ReccTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:autoSizeMaxTextSize="15sp"
                android:autoSizeMinTextSize="8sp"

                android:autoSizeTextType="uniform"
                android:text="Title"
                android:textAlignment="center"
                android:textColor="#fff"
                android:visibility="invisible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/ReccAuthor"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:autoSizeMaxTextSize="15sp"
                android:autoSizeMinTextSize="8sp"
                android:autoSizeTextType="uniform"
                android:text="Author"
                android:textAlignment="center"
                android:textColor="#fff"
                android:visibility="invisible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />


        </android.support.constraint.ConstraintLayout>


    </android.support.v7.widget.CardView>